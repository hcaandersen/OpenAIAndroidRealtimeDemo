<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <!-- Custom Wave View -->
    <com.navbot.aihelper.CircleWaveView
        android:id="@+id/circle_wave_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />

    <!-- TextView for displaying the user's question -->
    <TextView
        android:id="@+id/ask_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your question will appear here"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:gravity="center" />

    <!-- TextView for displaying the AI's answer -->
    <TextView
        android:id="@+id/answer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI's answer will appear here"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <!-- Button to send text -->
    <Button
        android:id="@+id/btnSendText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#F08585"
        android:text="Send Text"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

    <!-- Button to stop WebSocket -->
    <Button
        android:id="@+id/stopws"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#F08585"
        android:text="Stop WebSocket"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

    <!-- Button to play recorded audio -->
    <Button
        android:id="@+id/playmys"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#F08585"
        android:text="Play Audio"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

    <!-- Clear and Reset Button -->
    <Button
        android:id="@+id/btn_clear_and_reset"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#F08585"
        android:text="Clear and Reset"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
